.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:features, :index)
      %li=link_to pat(:new), url(:features, :new)
      %li.active=link_to pat(:edit), url(:features, :edit, :id => @feature.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:feature)
    .inner
      -form_for :feature, url(:features, :update, :id => @feature.id), :method => :put, :class => :form do |f|
        =partial "features/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")