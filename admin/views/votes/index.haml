.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:votes, :index)
      - if current_account.is_admin?
        %li=link_to pat(:new), url(:votes, :new)
  .content
    %h2.title
      =pat(:all)
      =mt(:votes)
    .inner
      %table.table
        %tr
          %th.first=mat(:vote, :id)
          %th=mat(:vote, :date)
          %th=mat(:vote, :credits)
          %th=mat(:vote, :feature_id)
          %th=mat(:vote, :account_id)
          %th.last="&nbsp;"
        -@votes.each do |vote|
          %tr
            %td.first=vote.id
            %td=vote.date
            %td=vote.credits
            %td=vote.feature_id
            %td=vote.account_id
            %td.last
              =button_to pat(:edit), url(:votes, :edit, :id => vote.id), :method => :get, :class => :button_to
              ="|"
              =button_to pat(:delete), url(:votes, :destroy, :id => vote.id), :method => :delete, :class => :button_to
      .actions-bar.wat-cf
        .actions="&nbsp;"

-content_for :sidebar, partial("base/sidebar")